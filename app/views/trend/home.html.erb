                  </div>
                  <div class="container">
                  <button type="button" class="btn btn-success" style="float: right; margin-top: 0;"><%=@trends[i]["tags"]%></button>
                  <a href="<%=@trends[i]["url"]%>" class="btn btn-primary" style="display: block; float: right; margin-top: 0;" ><%=@trends[i]["domain"]%></a>
                    </div>
                </div>
                <input id="app" type="hidden" name="Language" value="<%=@trends[i]["id"]%>">
